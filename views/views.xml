<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="performance.form">
      <field name="name">performance form</field>
      <field name="model">performance</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="date"/>
              <field name="work"/>
            </group>
            <group col = "6" colspan="6">
              <field name="assignedTo"/>
              <field name="assignedFrom"/>
              <field name="supervisor"/>
              <field name="state"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <record model="ir.ui.view" id="performance.tree">
      <field name="name">performance tree</field>
      <field name="model">performance</field>
      <field name="arch" type="xml">
        <tree>
          <field name="date"/>
          <field name="work"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="performance.kanban">
      <field name="name">performance kanban</field>
      <field name="model">performance</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="date"/>
          <field name="work"/>
        </kanban>
      </field>
    </record>
    <record model="ir.actions.act_window" id="performance.action_window">
      <field name="name">performance window</field>
      <field name="res_model">performance</field>
      <field name="view_mode">tree,kanban,form</field>
    </record>

    <menuitem name="Performance" id="performance.menu_root" action="performance.action_window"/>
    <menuitem name="performance" id="performance.menu" parent="performance.menu_root"  action="performance.action_window"/>
  </data>
</odoo>