<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="screen5_form">
      <field name="name">screen5 form</field>
      <field name="model">screen5</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group col = "6" colspan="6">
              <field name="department"/>
              <field name="work"/>
              <field name="date"/>
              <field name="assigned_to"/>
              <field name="position"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <record model="ir.ui.view" id="screen5_tree">
      <field name="name">screen5 tree</field>
      <field name="model">screen5</field>
      <field name="arch" type="xml">
        <tree>
          <field name="department"/>
          <field name="work"/>
          <field name="date"/>
          <field name="assigned_to"/>
          <field name="position"/>
        </tree>
      </field>
    </record>
    
    <record model="ir.actions.act_window" id="screen5_action_window">
      <field name="name">Тайлан</field>
      <field name="res_model">screen5</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Тайлан" id="screen5_menu" parent="screen_menu_root"  action="screen5_action_window"/>
  </data>
</odoo>